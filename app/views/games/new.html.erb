<h1>New Game</h1>
<div class="container">
<% @letters.each do |letter| %>
  <div class="tile">
    <%= letter %>
    </div>
<% end %>
</div>

<div class="form">
<form action="/score" method="post">
  <p>What's the longest word you can find??</p>
  <input type="text" name="word">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
</div>
